<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="VouchAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryChat</item>
        <item name="colorPrimaryDark">@color/colorAccentChat</item>
        <item name="colorAccent">@color/colorAccentChat</item>
    </style>

    <style name="VouchDetailAppTheme" parent="VouchAppTheme">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="VouchButton" parent="Widget.AppCompat.Button">
        <!-- Customize your theme here. -->
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SeekBarColor"
        parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/colorAccentChat</item>
    </style>

</resources>